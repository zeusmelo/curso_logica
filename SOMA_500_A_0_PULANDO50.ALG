algoritmo "semnome"
var
   c, soma: inteiro
inicio
c <- 500
soma <- 0
       enquanto (c >= 0) faca
         escreva (c," + ")
         c <- c - 50
         soma <- soma + c
       fimenquanto
       escreval (" ")
       escreval ("--------------------------")
       escreval ("RESULTADO DA SOMA: ", soma)
fimalgoritmo